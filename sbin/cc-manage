import signal
import django
import time
import sys
import os

os.environ.setdefault("DJANGO_SETTINGS_MODULE", "corecluster.settings")
django.setup()

from corenetwork.driver_interface import DriverInterface
from corenetwork.utils.logger import log

i_am_running = True

drivers = DriverInterface.get_all_drivers()


def handler(signum, frame):
    global i_am_running

    print("Stopping agents...")
    for driver in drivers:
        driver.shutdown_core()
    i_am_running = False


def print_usage():
    print("Usage: %s [configure|agent]" % sys.argv[0])
    print("       %s [agent|api|node|storage|task|network_pool|subnet|vm|cron] COMMAND ..." % sys.argv[0])
    print("          To stop agent mode, press Ctrl+C")


if __name__ == "__main__":
    try:
        if len(sys.argv) < 2:
            print_usage()
        elif sys.argv[1] == 'configure':
            for driver in drivers:
                driver.configure_core()
        elif sys.argv[1] == 'agent' and sys.argv[2] == 'start':
            for driver in drivers:
                driver.startup_core()
            signal.signal(signal.SIGTERM, handler)
            signal.signal(signal.SIGINT, handler)

            print("Ok")

            while i_am_running:
                time.sleep(1)

        elif len(sys.argv) == 3 and sys.argv[1] == 'node':
            DriverInterface.get_core_driver().info_node(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'node':
            DriverInterface.get_core_driver().info_node(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'vm':
            DriverInterface.get_core_driver().info_vm(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'vm':
            DriverInterface.get_core_driver().info_vm(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'task':
            DriverInterface.get_core_driver().info_task(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'task':
            DriverInterface.get_core_driver().info_task(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'agent':
            DriverInterface.get_core_driver().info_agent(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'agent':
            DriverInterface.get_core_driver().info_agent(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'subnet':
            DriverInterface.get_core_driver().info_subnet(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'subnet':
            DriverInterface.get_core_driver().info_subnet(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'network_pool':
            DriverInterface.get_core_driver().info_network_pool(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'network_pool':
            DriverInterface.get_core_driver().info_network_pool(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'storage':
            DriverInterface.get_core_driver().info_storage(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'storage':
            DriverInterface.get_core_driver().info_storage(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'image':
            DriverInterface.get_core_driver().info_image(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'image':
            DriverInterface.get_core_driver().info_image(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'log':
            DriverInterface.get_core_driver().info_log(sys.argv[2])
        elif len(sys.argv) == 4 and sys.argv[1] == 'log':
            DriverInterface.get_core_driver().info_log(sys.argv[2], sys.argv[3])

        elif len(sys.argv) == 3 and sys.argv[1] == 'api':
            DriverInterface.get_core_driver().info_api(sys.argv[2])

        elif len(sys.argv) == 3 and sys.argv[1] == 'cron':
            DriverInterface.get_core_driver().info_cron(sys.argv[2])
        else:
            print_usage()
    except Exception as e:
        print("Error occurred: " + str(e))
        log(msg="failed to start action %s" % sys.argv[1], function="cc-manage", exception=e)
